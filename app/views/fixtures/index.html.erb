<h2>Fixtures <mark>index</mark></h2>
<br>

<% @fixtures.each do |fixture| %>
		(<%= fixture.id %>)
		<%= fixture.date %> | 
		<%= fixture.season.competition.name %>
		-
		<mark>Stage <%= fixture.stage %></mark> • 

	<%= fixture.hometeam.club.shortname %>
	 <strong>
	 	<%= fixture.scorehome %> - <%= fixture.scoreaway %>
	 </strong>
	 <%= fixture.awayteam.club.shortname %>
	 <small>
	 | <%= fixture.time %></small>


	 <% if fixture.scorehome.nil? %>
	 	<small>
	 		<%= link_to "Update score", edit_fixture_path(fixture.id), class: "gotolink" %>
	 	</small>
	 <% else %>
	 	<small>
			<%= link_to "Link", fixture_path(fixture.id), class: "gotolink" %>
	 	</small>
	 <% end %>

	<br>
<% end %>